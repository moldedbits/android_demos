<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.moldedbits.androiddemos"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".AndroidDemosApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".library_demos.timber.TimberDemoActivity"
            android:label="@string/title_activity_timber_demo"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".library_demos.loader.LoaderDemoMainActivity"/>

        <activity android:name=".library_demos.loader.LoaderActivity"/>

        <activity android:name=".library_demos.loader.NoLoaderActivity"/>

        <!-- for facebook sromku library -->

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <provider
            android:name="com.facebook.FacebookContentProvider"
            android:authorities="com.facebook.app.FacebookContentProvider194881837524606"
            android:exported="true" />

        <activity
            android:name=".sromku_facebook_integration.Detail"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/title_activity_timber_demo"></activity>

        <activity android:name=".sromku_facebook_integration.FacebookLoginActivity"
            android:label="@string/title_activity_timber_demo"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <!-- end -->
    </application>

</manifest>
